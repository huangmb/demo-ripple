<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
 <!--   <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:text="无界水波纹"
                android:background="@drawable/ripple_with_no_mask"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="100dp" />
            <TextView
                android:gravity="center"
                android:text="有界水波纹"
                android:background="@drawable/ripple_with_color_mask"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="100dp" />
            <TextView
                android:gravity="center"
                android:text="图片水波纹"
                android:background="@drawable/ripple_with_pic_mask"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="100dp" />
            <TextView
                android:gravity="center"
                android:text="指定形状水波纹"
                android:background="@drawable/ripple_with_shape_mask"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="100dp" />
            <TextView
                android:gravity="center"
                android:text="指定按压效果水波纹"
                android:background="@drawable/ripple_with_selector_mask"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="100dp" />
        </LinearLayout>
  <!--  </ScrollView>
-->
</android.support.constraint.ConstraintLayout>